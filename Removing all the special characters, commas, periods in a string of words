import Foundation

//var input = "think, the% solution i fairly! i obvious."
var input = "The quick brown fox jumped over the lazy dogs back."
var items = input.components(separatedBy: " ")
print(items)
var array = [String]()
var str1 = ""
let specialCharacters = [" ",".",",","!","&","*","@","#","$","%"]
var status = false
var output = ""

for i in input{
 for j in specialCharacters {
     if String(i) == String(j) {
         status = true
         break
     }
     else{
        status = false
     }
 }
 if status {
     array.append(str1)
     str1 = ""
 }
 else {
     str1 += String(i)
 }
}
print(array)
var dummy = [String]()

 for j in array {
     if j != "" {
         dummy.append(j)
     }
  }
print(dummy)

var dict = [Int]()

for j in dummy {
    dict.append(j.count)
}
print(dict)

var minIndex = 0
var minIndexArray = [minIndex]

    for j in 1...dict.count-1{
      if (dict[minIndex]<dict[j]) {
         
        }
         else if(dict[minIndex] == dict[j]){
         minIndex = j
         minIndexArray.append(minIndex)
         }
         else{
             minIndex = j
             minIndexArray.removeAll()
             minIndexArray.append(minIndex)
         }
      }
print(minIndexArray)
